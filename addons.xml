<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.audio.soundcloud"
       name="SoundCloud"
       version="0.2.4"
       provider-name="Zsolt Török, Vanhoutteghem Pieter">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
    <import addon="script.module.parsedom" version="0.9.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">XBMC Plugin for SoundCloud</summary>
    <description lang="en">SoundCloud is a platform for musicians to promote and distribute their music online.
This is a third-party add-on, which uses public web services exposed by SoundCloud. Neither the XBMC community, nor the developer of this add-on is in any way affiliated with SoundCloud Ltd.</description>
  </extension>
</addon>

<addon	id="repository.pietervanh.addons"
		name="pietervanh's repo"
		version="1.0.0"
		provider-name="pietervanh">
	<extension	point="xbmc.addon.repository"
				name="pietervanh's repo">
		<info compressed="false">https://github.com/pietervanh/xbmc-repository-pietervanh/raw/master/addons.xml</info>
		<checksum>https://github.com/pietervanh/xbmc-repository-pietervanh/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/pietervanh/xbmc-repository-pietervanh/raw/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install pietervanh's repo</summary>
		<description>Download and install pietervanh's repo</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
